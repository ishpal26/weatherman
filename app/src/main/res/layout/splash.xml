<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:LinearLayoutxmlns="http://schemas.android.com/apk/res-auto"
    android:background="#0097A7"
    android:orientation="vertical">

    <!--<ishpallutfan.weatherman.CustomGifView
        android:id="@+id/gifview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp" />-->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/dropwithoutbg" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginTop="450dp"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:baselineAligned="false"
            android:text="Is it raining where you are?"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#E0F7FA"
            android:textSize="30dp"
            android:visibility="invisible" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yesText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignStart="@+id/textView2"
                android:clickable="true"
                android:text="yes"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#E0F7FA"
                android:textSize="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/yesText"
                android:layout_centerHorizontal="true"
                android:text="   |   "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#E0F7FA"
                android:textSize="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/noText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:clickable="true"
                android:text="no"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#E0F7FA"
                android:textSize="20dp"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>