<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0097A7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Is it raining where you are?"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="132dp"
        android:textColor="#E0F7FA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="yes   |"
        android:id="@+id/yesText"
        android:layout_marginTop="50dp"
        android:textColor="#E0F7FA"
        android:clickable="true"
        android:textSize="20dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="no"
        android:id="@+id/noText"
        android:layout_alignBottom="@+id/yesText"
        android:layout_toRightOf="@+id/yesText"
        android:layout_toEndOf="@+id/yesText"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:textColor="#E0F7FA"
        android:clickable="true"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/dropwithoutbg"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true" />

</RelativeLayout>